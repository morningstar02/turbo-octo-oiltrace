{
    "extends": "tslint:recommended",
    "linterOptions": {
      "format": "stylish"
    },
    "rules": {
      "align": {
        "options": [
          "elements",
          "members",
          "parameters",
          "statements"
        ]
      },
      "await-promise": {
        "options": [
          "RequestPromise"
        ]
      },
      "indent": [true, "spaces"],
      "interface-name": false,
      "max-classes-per-file": false,
      "max-line-length": [true, {"limit": 150, "ignore-pattern": "^import |^export {(.*?)}"}],
      "no-duplicate-imports": true,
      "no-multi-spaces": true,
      "no-unused-expression": {
        "options": [
          "allow-fast-null-checks"
        ]
      },
      "no-var-requires": false,
      "object-curly-spacing": {
        "options": [
          "always"
        ]
      },
      "object-literal-sort-keys": false,
      "prefer-readonly": true,
      "prefer-switch": {
        "options": {
          "min-cases": 3
        }
      },
      "prefer-template": true,
      "quotemark": {
        "options": [
          "single",
          "avoid-escape",
          "avoid-template"
        ]
      },
      "space-within-parens": {
        "options": [
          0
        ]
      },
      "trailing-comma": [ false ],
      "variable-name": {
        "options": [
          "ban-keywords",
          "check-format",
          "allow-leading-underscore",
          "allow-pascal-case"
        ]
      },
      "whitespace": {
        "options": [
          "check-branch",
          "check-decl",
          "check-module",
          "check-operator",
          "check-preblock",
          "check-postbrace",
          "check-rest-spread",
          "check-separator",
          "check-type",
          "check-type-operator",
          "check-typecast"
        ]
      }
    },
    "rulesDirectory": "./build/ts-rules/"
  }
  